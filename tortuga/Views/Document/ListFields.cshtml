@{
    Layout = null;
}
@model tortuga.MongoData.Entities.Model.DocumentSchema

<style>
    #navcontainer ul {
        margin: 0;
        padding: 0;
        list-style-type: none;
    }

    #navcontainer .document-item {
        display: block;
        color: #FFF;
        background-color: #036;
        width: 50%;
        padding: 3px 12px 3px 8px;
        text-decoration: none;
        border-bottom: 1px solid #fff;
        font-weight: bold;
    }

    #navcontainer a {
        color: #FFF;
    }

        #navcontainer .document-item:hover {
            background-color: #333;
            color: #FFF;
        }

    #navcontainer li li .document-item {
        display: block;
        color: #FFF;
        background-color: #333;
        width: 50%;
        padding: 3px 3px 3px 17px;
        text-decoration: none;
        border-bottom: 1px solid #fff;
        font-weight: normal;
    }

    #navcontainer li li li .document-item {
        display: block;
        color: #FFF;
        background-color: #333;
        width: 50%;
        padding: 3px 3px 3px 25px;
        text-decoration: none;
        border-bottom: 1px solid #fff;
        font-weight: normal;
    }
</style>



@DisplayItemList(Model.Fields)

<div id="md-normal" class="modal fade" tabindex="-1" aria-hidden="true" style="display: none; margin-top: -63px;">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
        <h4 class="modal-title">Field Details</h4>
    </div>
    <!-- //modal-header-->
    <div class="modal-body">
        <form>
            <div class="form-group">
                <label for="txtFieldName">Parent</label>
                <input type="email" class="form-control" id="txtFieldName" value="Root" disabled>
            </div>
            <div class="form-group">
                <label for="txtFieldName">Field Name</label>
                <input type="email" class="form-control" id="txtFieldName" placeholder="Field Name">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Data Type</label>
                <select class="form-control">
                    <option>String</option>
                    <option>Number</option>
                    <option>Date</option>
                    <option>Document</option>
                </select>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
    <!-- //modal-body-->
</div>



@helper DisplayItemList(List<tortuga.MongoData.Entities.Model.Field> fields)
{
    if (fields != null)
    {
        if (fields.Any())
        {
            <ul>
                @foreach (var field in fields)
                {
                    <li><!--data-toggle="modal" data-target="#md-normal"-->
                        <div class="document-item" data-document-guid="@field.FieldGuid">
                            <a href="#" id="edit-field" data-document-guid="@field.FieldGuid"><b>@field.Name</b></a>
                                <i>(@field.DataType)</i>
                            <div class="pull-right">
                                <a href="#"><i class="fa fa-minus-circle" style="color:#f35958;"></i></a>
                            </div>
                        </div>
                        @DisplayItemList(field.Fields)
                    </li>
                }
            </ul>
        }
    }
}


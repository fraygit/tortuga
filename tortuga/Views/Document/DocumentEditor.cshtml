@{
    ViewBag.Title = "DocumentEditor";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@model tortuga.MongoData.Entities.Model.DocumentSchema

<style>
    #navcontainer ul
{
margin: 0;
padding: 0;
list-style-type: none;
}

#navcontainer .document-item
{
display: block;
color: #FFF;
background-color: #036;
width: 50%;
padding: 3px 12px 3px 8px;
text-decoration: none;
border-bottom: 1px solid #fff;
font-weight: bold;
}

#navcontainer .document-item:hover
{
background-color: #369;
color: #FFF;
}

#navcontainer li li .document-item
{
display: block;
color: #FFF;
background-color: #69C;
width: 50%;
padding: 3px 3px 3px 17px;
text-decoration: none;
border-bottom: 1px solid #fff;
font-weight: normal;
}

#navcontainer li li li .document-item
{
display: block;
color: #FFF;
background-color: #69C;
width: 50%;
padding: 3px 3px 3px 25px;
text-decoration: none;
border-bottom: 1px solid #fff;
font-weight: normal;
}


</style>


<div class="row">
    <div class="col-md-12">
        <section class="panel">
            <header class="panel-heading sm">
                <h2>Document Builder </h2>
            </header>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label>Document Name</label>
                        <input type="text" class="form-control" placeholder="Document Name" id="txtDocumentName">
                    </div>

                    <div id="navcontainer">
                        <ul class="root">
                            <li>
                                <div class="document-item">
                                    @Model.Name

                                </div>
                                @DisplayItemList(Model.Fields)



                                @*<ul>
                                    <li>
                                        <div class="document-item">sdf <i>(string)</i></div>
                                        <ul>
                                            <li>
                                                <div class="document-item">
                                                    sdfsd
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>*@
                            </li>
                        </ul>
                    </div>

                    <button type="button" class="btn btn-primary">Add a Field</button>

                </form>
            </div>

            <footer class="panel-footer">
                <button type="button" class="btn btn-theme" id="btn-save">Save Document</button>
                <button type="reset" class="btn">Cancel</button>
            </footer>
        </section>
    </div>
</div>
@helper DisplayItemList(List<tortuga.MongoData.Entities.Model.Field> fields) 
{
    if (fields != null) 
    { 
        if (fields.Any())
        {
            <ul>
                @foreach (var field in fields)
                {
                    <li>
                        <div class="document-item">@field.Name <i>(@field.DataType)</i></div>
                        @DisplayItemList(field.Fields)
                    </li>
                }
            </ul>
        }
    }
}